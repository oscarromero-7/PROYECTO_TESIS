{
  "dashboard": {
    "id": null,
    "title": "OptiMon - Windows 11 Physical Server",
    "tags": ["optimon", "windows", "physical"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "CPU Usage - Windows 11",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "100 - (avg(rate(windows_cpu_time_total{instance=\"host.docker.internal:9182\",mode=\"idle\"}[2m])) * 100)",
            "legendFormat": "CPU Usage %",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 70},
                {"color": "red", "value": 90}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Memory Usage - Windows 11",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "((windows_cs_physical_memory_bytes{instance=\"host.docker.internal:9182\"} - windows_os_physical_memory_free_bytes{instance=\"host.docker.internal:9182\"}) / windows_cs_physical_memory_bytes{instance=\"host.docker.internal:9182\"}) * 100",
            "legendFormat": "Memory Usage %",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 75},
                {"color": "red", "value": 90}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Network Traffic - Windows 11",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "rate(windows_net_bytes_received_total{instance=\"host.docker.internal:9182\",nic!~\".*Loopback.*|.*isatap.*\"}[5m]) * 8",
            "legendFormat": "Download {{nic}}",
            "refId": "A"
          },
          {
            "expr": "rate(windows_net_bytes_sent_total{instance=\"host.docker.internal:9182\",nic!~\".*Loopback.*|.*isatap.*\"}[5m]) * 8",
            "legendFormat": "Upload {{nic}}",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bps",
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 10000000},
                {"color": "red", "value": 50000000}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Disk Usage - Windows 11",
        "type": "stat",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "((windows_logical_disk_size_bytes{instance=\"host.docker.internal:9182\"} - windows_logical_disk_free_bytes{instance=\"host.docker.internal:9182\"}) / windows_logical_disk_size_bytes{instance=\"host.docker.internal:9182\"}) * 100",
            "legendFormat": "{{volume}} Used %",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 80},
                {"color": "red", "value": 95}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "System Performance - Windows 11",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "windows_system_processor_queue_length{instance=\"host.docker.internal:9182\"}",
            "legendFormat": "Processor Queue Length",
            "refId": "A"
          },
          {
            "expr": "windows_system_processes{instance=\"host.docker.internal:9182\"}",
            "legendFormat": "Total Processes",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 10},
                {"color": "red", "value": 20}
              ]
            }
          }
        }
      },
      {
        "id": 6,
        "title": "Server Info - Windows 11",
        "type": "text",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "options": {
          "content": "### Windows 11 Physical Server\n**Hostname:** Tu-PC-Local  \n**OS:** Windows 11 Pro  \n**Monitoring:** Windows Exporter  \n**Port:** 9182  \n**Location:** On-Premise\n\n**Status:** Active âœ…  \n**Type:** Physical Development Machine",
          "mode": "markdown"
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
}