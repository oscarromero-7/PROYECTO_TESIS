  "panels": [
    {
      "type": "gauge",
      "title": "CPU Usage (%)",
      "gridPos": { "h": 8, "w": 6, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "100 - (avg by (instance) (rate(windows_cpu_time_total{mode=\"idle\"}[5m])) * 100)",
          "legendFormat": "CPU"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 70 },
              { "color": "red", "value": 90 }
            ]
          }
        }
      }
    },
    {
      "type": "gauge",
      "title": "Memory Usage (%)",
      "gridPos": { "h": 8, "w": 6, "x": 6, "y": 0 },
      "targets": [
        {
          "expr": "(1 - (windows_memory_available_bytes / windows_memory_physical_total_bytes)) * 100",
          "legendFormat": "RAM"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 70 },
              { "color": "red", "value": 90 }
            ]
          }
        }
      }
    },
    {
      "type": "gauge",
      "title": "Disk C: Usage (%)",
      "gridPos": { "h": 8, "w": 6, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "(1 - (windows_logical_disk_free_bytes{volume=\"C:\"} / windows_logical_disk_size_bytes{volume=\"C:\"})) * 100",
          "legendFormat": "C:"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 70 },
              { "color": "red", "value": 90 }
            ]
          }
        }
      }
    },
    {
      "type": "gauge",
      "title": "Network In (KB/s)",
      "gridPos": { "h": 8, "w": 6, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "rate(windows_net_bytes_received_total[5m]) / 1024",
          "legendFormat": "In"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "KBs",
          "min": 0,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 5000 },
              { "color": "red", "value": 10000 }
            ]
          }
        }
      }
    },
    {
      "type": "gauge",
      "title": "Network Out (KB/s)",
      "gridPos": { "h": 8, "w": 6, "x": 6, "y": 8 },
      "targets": [
        {
          "expr": "rate(windows_net_bytes_sent_total[5m]) / 1024",
          "legendFormat": "Out"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "KBs",
          "min": 0,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 5000 },
              { "color": "red", "value": 10000 }
            ]
          }
        }
      }
    }
  ],
