{
  "dashboard": {
    "id": null,
    "uid": "optimon-windows-corrected",
    "title": "OptiMon - Windows Local Monitoring (Corrected)",
    "tags": ["optimon", "windows", "local"],
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "CPU Usage (%)",
        "type": "stat",
        "targets": [
          {
            "expr": "100 - (avg(irate(windows_cpu_time_total{mode=\"idle\",job=\"windows_local\"}[5m])) * 100)",
            "refId": "A",
            "legendFormat": "CPU Usage"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 100,
            "unit": "percent",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 70},
                {"color": "red", "value": 90}
              ]
            }
          }
        },
        "options": {
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "textMode": "auto",
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto"
        },
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Memory Available (GB)",
        "type": "stat",
        "targets": [
          {
            "expr": "windows_memory_available_bytes{job=\"windows_local\"} / 1024 / 1024 / 1024",
            "refId": "A",
            "legendFormat": "Available Memory"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "unit": "decbytes",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 1},
                {"color": "green", "value": 2}
              ]
            }
          }
        },
        "options": {
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "textMode": "auto",
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto"
        },
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "Memory Available (GB)",
        "type": "stat",
        "targets": [
          {
            "expr": "windows_memory_available_bytes{job=\"windows_local\"} / 1024 / 1024 / 1024",
            "refId": "A",
            "legendFormat": "Available Memory"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "unit": "decbytes",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 1},
                {"color": "green", "value": 2}
              ]
            }
          }
        },
        "options": {
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "textMode": "auto",
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto"
        },
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0}
      },
      {
        "id": 4,
        "title": "CPU Cores Frequency (MHz)",
        "type": "stat",
        "targets": [
          {
            "expr": "avg(windows_cpu_core_frequency_mhz{job=\"windows_local\"})",
            "refId": "A",
            "legendFormat": "CPU Frequency"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "unit": "none",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 2000},
                {"color": "red", "value": 3000}
              ]
            }
          }
        },
        "options": {
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "textMode": "auto",
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto"
        },
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0}
      },
      {
        "id": 5,
        "title": "CPU Usage Over Time",
        "type": "timeseries",
        "targets": [
          {
            "expr": "100 - (avg(irate(windows_cpu_time_total{mode=\"idle\",job=\"windows_local\"}[5m])) * 100)",
            "refId": "A",
            "legendFormat": "CPU Usage %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 100,
            "unit": "percent",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "options": {
          "legend": {
            "calcs": [],
            "displayMode": "list",
            "placement": "bottom"
          },
          "tooltip": {
            "mode": "single"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 6,
        "title": "Memory Usage Over Time",
        "type": "timeseries",
        "targets": [
          {
            "expr": "windows_memory_available_bytes{job=\"windows_local\"} / 1024 / 1024 / 1024",
            "refId": "A",
            "legendFormat": "Available Memory (GB)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "unit": "decbytes",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "options": {
          "legend": {
            "calcs": [],
            "displayMode": "list",
            "placement": "bottom"
          },
          "tooltip": {
            "mode": "single"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      }
    ]
  },
  "folderId": null,
  "overwrite": false
}